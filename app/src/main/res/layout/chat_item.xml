<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:elevation="@dimen/_20dp"
        app:cardCornerRadius="@dimen/_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/senderImage"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:elevation="@dimen/_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/name"
        android:textStyle="bold"
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/cardImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"/>
    <TextView
        android:id="@+id/userMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/chatMessage"
        android:textSize="@dimen/_10sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/cardImage"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:layout_marginLeft="@dimen/_10dp" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        tools:text="@string/time"
        android:textStyle="bold"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/message_count"
        app:layout_constraintBottom_toTopOf="@id/messageCountCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/messageCountCard"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:backgroundTint="@color/message_count"
        app:cardCornerRadius="@dimen/_15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/messCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/messCount"
                android:textSize="@dimen/_10sp"
                android:textColor="@color/primary_text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageView
        app:srcCompat="@drawable/baseline_push_pin_24"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_17dp"
        android:id="@+id/pinIcon"
        app:layout_constraintEnd_toStartOf="@id/messageCountCard"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_4dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_17dp"
        android:id="@+id/muteIcon"
        app:layout_constraintEnd_toStartOf="@id/pinIcon"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_4dp"
        app:srcCompat="@drawable/baseline_volume_up_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>